package qaframework.rtv.fw;

import org.openqa.selenium.By;
import org.openqa.selenium.NoSuchElementException;

import qaframework.rtv.tests.TestBase;

public class ApplicationManager {

	public void openMainPage() {
		TestBase.driver.get(TestBase.baseUrl + "/");
	}

	public void warrningMessage() {
		TestBase.driver.findElement(By.id("auth_message"));
	}

	public boolean isElementPresent(By by) {
	    try {
	      TestBase.driver.findElement(by);
	      return true;
	    } catch (NoSuchElementException e) {
	      return false;
	    }
	  }

}
